
<div class="container">
  <% if flash.now[:notice].present? %>
    <div class="alert alert-success" role="alert">
      <%= flash.now[:notice] %>
    </div>
  <% end %>

  <% if flash.now[:alert].present? %>
    <div class="alert alert-danger" role="alert">
      <%= flash.now[:alert] %>
    </div>
  <% end %>
</div>

